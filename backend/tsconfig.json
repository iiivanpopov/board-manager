{
	"compilerOptions": {
		"target": "ES2023",
		"module": "ES2022",
		"outDir": "./dist",
		"strict": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"moduleResolution": "Bundler",
		"allowImportingTsExtensions": true,
		"noEmit": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": "./src",
		"paths": {
			"@/*": ["*"],
			"@controllers/*": ["controllers/*"],
			"@services/*": ["services/*"],
			"@routes/*": ["routes/*"],
			"@utils/*": ["utils/*"]
		}
	}
}
